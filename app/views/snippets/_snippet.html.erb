<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="myModalLabel"><%= @snippet.name %></h4>
    </div>
    <div class="modal-body">

<p>Language: <%= @snippet.language.name %></p>
<p>Author: <%= @snippet.user.email %></p>
<p>Private: <%= @snippet.private %></p>
<p>Title: <%= @snippet.name %></p>
<p>Work: <%= markdown(@snippet.body)%></p>

</div>
<div class="modal-footer">
  <% if can? :edit, @snippet %>
    <%= link_to "Edit", edit_snippet_path(@snippet), class:"btn btn-warning" %>
  <% end %>

  <% if can? :destroy, @snippet %>
    <%= link_to "Delete", snippet_path(@snippet),
                          method: :delete,
                          class:"btn btn-danger",
                          data: {confirm: "Are you sure you want to delete #{@snippet.name}?"} %>
  <% end %>
  <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
</div>
</div>
</div>
