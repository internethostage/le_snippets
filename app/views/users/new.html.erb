<div class="row">
  <div class="col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10 col-xs-12">
    <h1 class="text-center">Create an account</h1>
    <hr>

    <%= simple_form_for @user do |f|%>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="fa fa-user fa-2x" aria-hidden="true"></i>
        </span>
      <%= f.input :first_name, label: false, placeholder: "First Name", input_html: { class:"form-control form-with-icon input-lg" }, label_html: { class:"input-lg" } %>
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="fa fa-user fa-2x" aria-hidden="true"></i>
        </span>
      <%= f.input :last_name, label: false, placeholder: "Last Name", input_html: { class:"form-control form-with-icon input-lg" }, label_html: { class:"input-lg" } %>
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="fa fa-envelope-o fa-2x" aria-hidden="true"></i>
        </span>
        <%= f.input :email, label: false, placeholder: "Email", input_html: { class:"form-control form-with-icon input-lg" }, label_html: { class:"input-lg" }%>
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="fa fa-key fa-2x" aria-hidden="true"></i>
        </span>
      <%= f.input :password, label: false, placeholder: "Password", input_html: { class:"form-control form-with-icon input-lg" }, label_html: { class:"input-lg" } %>
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="fa fa-key fa-2x" aria-hidden="true"></i>
        </span>
      <%= f.input :password_confirmation, label: false, placeholder: "Password Confirmation", input_html: { class:"form-with-icon form-control input-lg" }, label_html: { class:"input-lg" } %>
    </div>

    <br>
    <div>
    <%= f.submit "Create account!", class:"btn btn-success btn-lg center-block"%>
    </div>
    <% end %>
    <br>
    <br>
    <br>
    <br>
  </div>
</div>

<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <h4 class="text-center well well-sm"> Already have an account? <%= link_to "Log In", new_session_path %> </h4>
  </div>
</div>
